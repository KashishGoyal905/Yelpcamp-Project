<!-- page for editing campgrounds coonected to /campgrounds/edit -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Campground</title>
</head>

<body>
    <h1>Edit campground</h1>
    <!-- as soon as i hit update it will update things in action url-->
    <form action="/Campgrounds/<%=campground._id  %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <!-- value will take value from previous page previos values -->
            <input type="text" id="title" name="campground[title]" value="<%=campground.title%>">
        </div>
        <div>
            <label for="location">Location</label>
            <!-- value will take value from previous page previos values -->
            <input type="text" id="location" name="campground[location]" value="<%=campground.location%>">
        </div>
        <button>Update Campground</button>
    </form>

    <footer>
        <!--back to specific campgrounds  -->
        <a href="/campgrounds/<%=campground._id%>">All Campgrounds</a>
    </footer>
</body>

</html>