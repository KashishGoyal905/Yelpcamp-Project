<!-- page for creating new campgrounds coonected to /campgrounds/new -->

<!-- injecting code to boiler plate -->
<!-- it will pass everything here to the body of boiler plate -->
<% layout('layouts/boilerPlate') %>
    <!-- making specific campground style -->
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/Campgrounds" method="POST">
                <!-- tilte input -->
                <div>
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]">
                </div>
                <!-- location input -->
                <div>
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]">
                </div>
                <!-- image url input -->
                <div>
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="campground[image]">
                </div>
                <!-- price input -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price Url</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Username"
                            aria-describedby="price-label" name="campground[price]">
                    </div>
                </div>
                <!-- description url input -->
                <div>
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="campground[description]"></textarea>
                </div>
                <!-- btn style -->
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>

            <footer>
                <!--back to all campgrounds  -->
                <a href="/campgrounds">All Campgrounds</a>
            </footer>

        </div>
    </div>